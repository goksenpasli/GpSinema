<Window x:Class="Sinema.MainWindow" x:Name="window"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ComponentModel="clr-namespace:System.ComponentModel;assembly=WindowsBase"
    xmlns:Extensions="clr-namespace:Extensions;assembly=Extensions"
    xmlns:Media="clr-namespace:Extensions.Controls;assembly=Extensions"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:local="clr-namespace:Sinema"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="clr-namespace:Sinema.Model" xmlns:system="clr-namespace:System;assembly=mscorlib"
    xmlns:view="clr-namespace:Sinema.View" xmlns:viewmodel="clr-namespace:Sinema.ViewModel"
    Title="Sinema"
    d:DataContext="{d:DesignInstance Type={x:Type viewmodel:MainWindowViewModel}}"
    d:DesignHeight="850" d:DesignWidth="1024" UseLayoutRounding="True" WindowStartupLocation="CenterScreen"
    WindowState="Maximized"
    mc:Ignorable="d">
    <Window.Resources>
        <DataTemplate x:Key="MüşteriWindow">
            <view:MusteriControl>
                <view:MusteriControl.DataContext>
                    <model:Musteri />
                </view:MusteriControl.DataContext>
            </view:MusteriControl>
        </DataTemplate>
        <ObjectDataProvider x:Key="KoltukÇeşidi" MethodName="GetValues" ObjectType="{x:Type system:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="model:KoltukÇeşidi" />
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
        <ObjectDataProvider x:Key="ColorList" MethodName="GetProperties" ObjectInstance="{x:Type Colors}" />
        <CollectionViewSource x:Key="Filmler" Source="{Binding SelectedItem.Film, ElementName=TabCtrl}">
            <CollectionViewSource.SortDescriptions>
                <ComponentModel:SortDescription Direction="Ascending" PropertyName="FilmSaati" />
            </CollectionViewSource.SortDescriptions>
        </CollectionViewSource>
        <Style x:Key="ListColorBlockStyle" TargetType="{x:Type ListBoxItem}">
            <Style.Triggers>
                <DataTrigger Binding="{Binding Name}" Value="Black">
                    <Setter Property="IsEnabled" Value="False" />
                </DataTrigger>
                <DataTrigger Binding="{Binding Name}" Value="Transparent">
                    <Setter Property="IsEnabled" Value="False" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
        <ItemsControl x:Key="PreviewTooltip" ItemsSource="{Binding SalonViewModel.Salon.SalonÖnizleme}" x:Shared="false">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border Width="20" Height="20"
                        Background="Black" BorderBrush="Red" BorderThickness="1">
                        <TextBlock Text="{Binding Mode=OneWay}"
                            Foreground="White"
                            HorizontalAlignment="Center" VerticalAlignment="Center"
                            FontSize="10" />
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Columns="{Binding SalonViewModel.Salon.EnKoltukSayı}" Rows="{Binding SalonViewModel.Salon.BoyKoltukSayı}" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
        </ItemsControl>
        <DataTemplate x:Key="ListboxToolTipMusteriTemplate">
            <Grid d:DataContext="{d:DesignInstance Type={x:Type model:Musteri}}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <StackPanel DataContext="{Binding FilmId, Converter={StaticResource FilmIdToFilmConverter}}" d:DataContext="{d:DesignInstance Type={x:Type model:Film}}" Orientation="Horizontal">
                    <StackPanel.Background>
                        <Binding Converter="{StaticResource StringToBrushConverter}" Path="Renk" />
                    </StackPanel.Background>
                    <Image HorizontalAlignment="Left" Source="{Binding ResimYolu, ConverterParameter=32, Converter={StaticResource DataImageFilePathImageUriConverter}}" />
                    <TextBlock Text="{Binding Adı}" HorizontalAlignment="Left" VerticalAlignment="Center" />
                </StackPanel>
                <TextBlock Grid.Column="1"
                    Margin="25,0,0,0" HorizontalAlignment="Right" VerticalAlignment="Center"
                    FontWeight="Bold"><Run Text="{Binding Ad}" /><LineBreak /><Run Text="{Binding Soyad}" /></TextBlock>
            </Grid>
        </DataTemplate>
        <ItemsPanelTemplate x:Key="ColorPanelTemplate">
            <UniformGrid Columns="8" />
        </ItemsPanelTemplate>
        <DataTemplate x:Key="ColorItemTemplate">
            <StackPanel Orientation="Horizontal">
                <Rectangle Width="16" Height="16" Fill="{Binding Name}" />
                <TextBlock Text="{Binding Name}" VerticalAlignment="Center" />
            </StackPanel>
        </DataTemplate>
        <Style TargetType="{x:Type Extensions:NumericUpDownControl}">
            <Setter Property="Orientation" Value="Horizontal" />
        </Style>
        <Style x:Key="ComboBoxItemTopluGirişStyle" TargetType="{x:Type ComboBoxItem}">
            <Setter Property="IsEnabled">
                <Setter.Value>
                    <MultiBinding Converter="{StaticResource TopluGirişKoltukConverter}">
                        <Binding Mode="OneWay" />
                        <Binding ElementName="grid" Path="DataContext.SalonViewModel.Salon.SeçiliFilm" />
                        <Binding Path="KoltukDolu" />
                    </MultiBinding>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid x:Name="grid" d:DataContext="{d:DesignInstance Type={x:Type viewmodel:MainWindowViewModel}}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="257.6" />
            <ColumnDefinition Width="3" />
            <ColumnDefinition />
            <ColumnDefinition Width="3" />
            <ColumnDefinition Width="350" />
        </Grid.ColumnDefinitions>
        <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto">
            <StackPanel Background="{StaticResource BorderBackground}">
                <GroupBox Header="SALON OLUŞTUR">
                    <StackPanel>
                        <HeaderedContentControl Header="ADI" Template="{StaticResource HorizontalHeaderedContentControlControlTemplate}">
                            <TextBox Text="{Binding SalonViewModel.Salon.Adı, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        </HeaderedContentControl>
                        <HeaderedContentControl Header="EN KOLTUK SAYISI" Template="{StaticResource HorizontalHeaderedContentControlControlTemplate}">
                            <Extensions:NumericUpDownControl Maximum="50" Minimum="1" SmallChange="1"
                                Value="{Binding SalonViewModel.Salon.EnKoltukSayı, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                                <Extensions:NumericUpDownControl.ToolTip>
                                    <ToolTip Content="{StaticResource PreviewTooltip}" />
                                </Extensions:NumericUpDownControl.ToolTip>
                            </Extensions:NumericUpDownControl>
                        </HeaderedContentControl>
                        <HeaderedContentControl Header="BOY KOLTUK SAYISI" Template="{StaticResource HorizontalHeaderedContentControlControlTemplate}">
                            <Extensions:NumericUpDownControl Maximum="50" Minimum="1" SmallChange="1"
                                Value="{Binding SalonViewModel.Salon.BoyKoltukSayı, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                                <Extensions:NumericUpDownControl.ToolTip>
                                    <ToolTip Content="{StaticResource PreviewTooltip}" />
                                </Extensions:NumericUpDownControl.ToolTip>
                            </Extensions:NumericUpDownControl>
                        </HeaderedContentControl>
                        <Extensions:SplitButton HorizontalContentAlignment="Stretch" Command="{Binding SalonViewModel.SalonOluştur, Mode=OneWay}">
                            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                <Image Width="32" Height="32">
                                    <Image.Source>
                                        <MultiBinding Converter="{StaticResource SystemFileIconConverter}">
                                            <Binding Source="Shell32.dll" />
                                            <Binding Source="144" />
                                        </MultiBinding>
                                    </Image.Source>
                                </Image>
                                <TextBlock Text="OLUŞTUR" VerticalAlignment="Center" />
                            </StackPanel>
                            <Extensions:SplitButton.InternalContent>
                                <ListBox ItemsSource="{Binding Mode=OneWay, Source={StaticResource ColorList}}"
                                    ItemContainerStyle="{StaticResource ListColorBlockStyle}"
                                    ItemTemplate="{StaticResource ColorItemTemplate}"
                                    ItemsPanel="{StaticResource ColorPanelTemplate}"
                                    SelectedValue="{Binding SalonViewModel.Salon.Renk, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                    SelectedValuePath="Name" />
                            </Extensions:SplitButton.InternalContent>
                        </Extensions:SplitButton>
                    </StackPanel>
                </GroupBox>
                <GroupBox DataContext="{Binding FilmViewModel}">
                    <GroupBox.Header>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="FİLMLER" VerticalAlignment="Center" />
                            <Button Foreground="{x:Null}"
                                Background="{x:Null}"
                                Command="{Binding DataContext.ReportViewModel.FilmListesiRaporla, ElementName=grid}"
                                IsTabStop="False">
                                <Image Width="16" Height="16" Source="{Binding Converter={StaticResource FilePathToIconConverter}, Source=.xlsx}" />
                            </Button>
                        </StackPanel>
                    </GroupBox.Header>
                    <StackPanel>
                        <HeaderedContentControl Header="SALON SEÇ">
                            <ComboBox ItemsSource="{Binding DataContext.SalonViewModel.Salonlar.Salon, ElementName=grid}" SelectedItem="{Binding SeçiliSalon}">
                                <ComboBox.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <VirtualizingStackPanel />
                                    </ItemsPanelTemplate>
                                </ComboBox.ItemsPanel>
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Rectangle Width="16" Height="16" Fill="{Binding Renk, Converter={StaticResource StringToBrushConverter}}" />
                                            <TextBlock Text="{Binding Adı}" />
                                        </StackPanel>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                        </HeaderedContentControl>
                        <HeaderedContentControl Header="ADI">
                            <TextBox Text="{Binding Film.Adı, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        </HeaderedContentControl>
                        <HeaderedContentControl Header="TARİH">
                            <UniformGrid Columns="2">
                                <DatePicker SelectedDate="{Binding Tarih}" />
                                <Extensions:TimePicker TimeValue="{Binding Saat, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                            </UniformGrid>
                        </HeaderedContentControl>
                        <HeaderedContentControl Header="SÜRESİ" Template="{StaticResource HorizontalHeaderedContentControlControlTemplate}">
                            <Extensions:NumericUpDownControl Maximum="500" Minimum="0" SmallChange="1"
                                Value="{Binding Film.Süre, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        </HeaderedContentControl>
                        <HeaderedContentControl Header="FİLM TİPİ" Template="{StaticResource HorizontalHeaderedContentControlControlTemplate}">
                            <ComboBox ItemsSource="{StaticResource FilmTipleri}" SelectedIndex="{Binding FilmTipi}" />
                        </HeaderedContentControl>
                        <HeaderedContentControl Header="YÖNETMEN" Template="{StaticResource HorizontalHeaderedContentControlControlTemplate}">
                            <TextBox Text="{Binding Film.Yönetmen, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        </HeaderedContentControl>
                        <HeaderedContentControl Header="OYUNCULAR" Template="{StaticResource HorizontalHeaderedContentControlControlTemplate}">
                            <TextBox Text="{Binding Film.Oyuncular, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        </HeaderedContentControl>
                        <UniformGrid Columns="2">
                            <Button Command="{Binding FilmResimEkle, Mode=OneWay}">
                                <StackPanel Orientation="Horizontal">
                                    <Image Width="16" Height="16">
                                        <Image.Source>
                                            <MultiBinding Converter="{StaticResource SystemFileIconConverter}">
                                                <Binding Source="Shell32.dll" />
                                                <Binding Source="117" />
                                            </MultiBinding>
                                        </Image.Source>
                                    </Image>
                                    <TextBlock Text="RESİM EKLE" VerticalAlignment="Center" />
                                </StackPanel>
                            </Button>
                            <Button Command="{Binding FilmVideoEkle, Mode=OneWay}" ToolTip="Video Kopyalanmaz. Bu Nedenle Konumu Değişirse Yürütülmez.">
                                <StackPanel Orientation="Horizontal">
                                    <Image Width="16" Height="16">
                                        <Image.Source>
                                            <MultiBinding Converter="{StaticResource SystemFileIconConverter}">
                                                <Binding Source="Shell32.dll" />
                                                <Binding Source="115" />
                                            </MultiBinding>
                                        </Image.Source>
                                    </Image>
                                    <TextBlock Text="VİDEO EKLE" VerticalAlignment="Center" />
                                </StackPanel>
                            </Button>
                        </UniformGrid>
                        <Extensions:SplitButton HorizontalContentAlignment="Stretch" Command="{Binding FilmGirişiYap}" CommandParameter="{Binding DataContext.SalonViewModel.Salonlar, ElementName=grid}">
                            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                <Image Width="32" Height="32">
                                    <Image.Source>
                                        <MultiBinding Converter="{StaticResource SystemFileIconConverter}">
                                            <Binding Source="Shell32.dll" />
                                            <Binding Source="140" />
                                        </MultiBinding>
                                    </Image.Source>
                                </Image>
                                <TextBlock Text="FİLM EKLE" VerticalAlignment="Center" />
                            </StackPanel>
                            <Extensions:SplitButton.InternalContent>
                                <ListBox ItemsSource="{Binding Mode=OneWay, Source={StaticResource ColorList}}"
                                    ItemContainerStyle="{StaticResource ListColorBlockStyle}"
                                    ItemTemplate="{StaticResource ColorItemTemplate}"
                                    ItemsPanel="{StaticResource ColorPanelTemplate}"
                                    SelectedValue="{Binding Film.Renk, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                    SelectedValuePath="Name" />
                            </Extensions:SplitButton.InternalContent>
                        </Extensions:SplitButton>
                    </StackPanel>
                </GroupBox>
                <GroupBox Header="ÜRÜN GİRİŞİ">
                    <TabControl Background="{StaticResource BorderBackground}">
                        <TabItem Header="GİRİŞ">
                            <StackPanel>
                                <HeaderedContentControl Header="ÜRÜN ADI" Template="{StaticResource HorizontalHeaderedContentControlControlTemplate}">
                                    <TextBox Text="{Binding ÜrünGirişiViewModel.Urun.ÜrünAdi, UpdateSourceTrigger=PropertyChanged}" />
                                </HeaderedContentControl>
                                <HeaderedContentControl Header="ÜRÜN BİRİM FİYATI" Template="{StaticResource HorizontalHeaderedContentControlControlTemplate}">
                                    <Extensions:NumericUpDownControl Maximum="10000" Minimum="1" ShowMode="CurrencyMode" SmallChange="1"
                                        Value="{Binding ÜrünGirişiViewModel.Urun.BirimFiyat, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                </HeaderedContentControl>
                                <HeaderedContentControl Header="ÜRÜN ADETİ" Template="{StaticResource HorizontalHeaderedContentControlControlTemplate}">
                                    <Extensions:NumericUpDownControl Maximum="10000" Minimum="1" SmallChange="1"
                                        Value="{Binding ÜrünGirişiViewModel.Urun.Adet, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                </HeaderedContentControl>
                                <Button Command="{Binding ÜrünGirişiViewModel.ÜrünGir, Mode=OneWay}" CommandParameter="{Binding Mode=OneWay}">
                                    <StackPanel Orientation="Horizontal">
                                        <Image Width="32" Height="32">
                                            <Image.Source>
                                                <MultiBinding Converter="{StaticResource SystemFileIconConverter}">
                                                    <Binding Source="Shell32.dll" />
                                                    <Binding Source="41" />
                                                </MultiBinding>
                                            </Image.Source>
                                        </Image>
                                        <TextBlock Text="GİRİŞ YAP" VerticalAlignment="Center" />
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </TabItem>
                        <TabItem Header="GÜNCELLE">
                            <ListView Height="150" ItemsSource="{Binding SalonViewModel.Salonlar.Urunler.Urun}">
                                <ListView.View>
                                    <GridView>
                                        <GridView.Columns>
                                            <GridViewColumn Header="ÜRÜNLER" DisplayMemberBinding="{Binding ÜrünAdi}" />
                                            <GridViewColumn Header="BİRİM &#xA;FİYAT">
                                                <GridViewColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <Extensions:NumericUpDownControl Maximum="5000" Minimum="1" ShowMode="CurrencyMode"
                                                            Value="{Binding BirimFiyat, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                                    </DataTemplate>
                                                </GridViewColumn.CellTemplate>
                                            </GridViewColumn>
                                            <GridViewColumn Header="ADET" DisplayMemberBinding="{Binding Adet}" />
                                            <GridViewColumn>
                                                <GridViewColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <Button Command="{Binding DataContext.ÜrünGirişiViewModel.ÜrünGüncelle, Mode=OneWay, ElementName=grid}">
                                                            <Image Width="16" Height="16">
                                                                <Image.Source>
                                                                    <MultiBinding Converter="{StaticResource SystemFileIconConverter}">
                                                                        <Binding Source="Shell32.dll" />
                                                                        <Binding Source="144" />
                                                                    </MultiBinding>
                                                                </Image.Source>
                                                            </Image>
                                                            <Button.CommandParameter>
                                                                <MultiBinding Converter="{StaticResource CloneConverter}">
                                                                    <Binding Mode="OneWay" />
                                                                </MultiBinding>
                                                            </Button.CommandParameter>
                                                        </Button>
                                                    </DataTemplate>
                                                </GridViewColumn.CellTemplate>
                                            </GridViewColumn>
                                        </GridView.Columns>
                                    </GridView>
                                </ListView.View>
                            </ListView>
                        </TabItem>
                    </TabControl>
                </GroupBox>
                <GroupBox Header="KOLTUK GİRİŞİ">
                    <TabControl Background="{StaticResource BorderBackground}">
                        <TabItem Header="GİRİŞ">
                            <StackPanel>
                                <HeaderedContentControl Header="KOLTUK TİPİ" Template="{StaticResource HorizontalHeaderedContentControlControlTemplate}">
                                    <ComboBox Text="{Binding KoltukTipiGirişiViewModel.KoltukTipi.KoltukAçıklama, UpdateSourceTrigger=PropertyChanged}" ItemsSource="{Binding Mode=OneWay, Source={StaticResource KoltukÇeşidi}}" IsEditable="True" />
                                </HeaderedContentControl>
                                <HeaderedContentControl Header="KOLTUK FİYATI" Template="{StaticResource HorizontalHeaderedContentControlControlTemplate}">
                                    <Extensions:NumericUpDownControl Maximum="10000" Minimum="1" ShowMode="CurrencyMode" SmallChange="1"
                                        Value="{Binding KoltukTipiGirişiViewModel.KoltukTipi.KoltukFiyatı, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                </HeaderedContentControl>
                                <Extensions:SplitButton HorizontalContentAlignment="Stretch" Command="{Binding KoltukTipiGirişiViewModel.KoltukTipiGirişiYap, Mode=OneWay}" CommandParameter="{Binding SalonViewModel.Salonlar.KoltukTipleri}">
                                    <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                        <Image Width="32" Height="32">
                                            <Image.Source>
                                                <MultiBinding Converter="{StaticResource SystemFileIconConverter}">
                                                    <Binding Source="Shell32.dll" />
                                                    <Binding Source="144" />
                                                </MultiBinding>
                                            </Image.Source>
                                        </Image>
                                        <TextBlock Text="GİRİŞ YAP" VerticalAlignment="Center" />
                                    </StackPanel>
                                    <Extensions:SplitButton.InternalContent>
                                        <ListBox ItemsSource="{Binding Mode=OneWay, Source={StaticResource ColorList}}"
                                            ItemContainerStyle="{StaticResource ListColorBlockStyle}"
                                            ItemTemplate="{StaticResource ColorItemTemplate}"
                                            ItemsPanel="{StaticResource ColorPanelTemplate}"
                                            SelectedValue="{Binding KoltukTipiGirişiViewModel.KoltukTipi.KoltukRenk}"
                                            SelectedValuePath="Name" />
                                    </Extensions:SplitButton.InternalContent>
                                </Extensions:SplitButton>
                            </StackPanel>
                        </TabItem>
                        <TabItem Header="GÜNCELLE">
                            <ListView Height="100" ItemsSource="{Binding SalonViewModel.Salonlar.KoltukTipleri.KoltukTipi}">
                                <ListView.View>
                                    <GridView>
                                        <GridView.Columns>
                                            <GridViewColumn Header="KOLTUK" Width="75">
                                                <GridViewColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <StackPanel Orientation="Horizontal">
                                                            <Extensions:ContentToggleButton Width="16" Height="16"
                                                                Background="{Binding KoltukRenk, Converter={StaticResource StringToBrushConverter}}"
                                                                BorderBrush="{x:Null}">
                                                                <ListBox ItemsSource="{Binding Mode=OneWay, Source={StaticResource ColorList}}"
                                                                    ItemContainerStyle="{StaticResource ListColorBlockStyle}"
                                                                    ItemTemplate="{StaticResource ColorItemTemplate}"
                                                                    ItemsPanel="{StaticResource ColorPanelTemplate}"
                                                                    SelectedValue="{Binding KoltukRenk, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                                    SelectedValuePath="Name" />
                                                            </Extensions:ContentToggleButton>
                                                            <TextBlock Text="{Binding KoltukAçıklama}" VerticalAlignment="Center" />
                                                        </StackPanel>
                                                    </DataTemplate>
                                                </GridViewColumn.CellTemplate>
                                            </GridViewColumn>
                                            <GridViewColumn Header="BİRİM &#xA;FİYAT" Width="75">
                                                <GridViewColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <Extensions:NumericUpDownControl Maximum="5000" Minimum="1" ShowMode="CurrencyMode" SmallChange="1"
                                                            Value="{Binding KoltukFiyatı, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                                    </DataTemplate>
                                                </GridViewColumn.CellTemplate>
                                            </GridViewColumn>
                                            <GridViewColumn Width="32">
                                                <GridViewColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <Button Command="{Binding DataContext.KoltukTipiGirişiViewModel.KoltukFiyatGüncelle, Mode=OneWay, ElementName=grid}" CommandParameter="{Binding Mode=OneWay}">
                                                            <Image Width="16" Height="16">
                                                                <Image.Source>
                                                                    <MultiBinding Converter="{StaticResource SystemFileIconConverter}">
                                                                        <Binding Source="Shell32.dll" />
                                                                        <Binding Source="144" />
                                                                    </MultiBinding>
                                                                </Image.Source>
                                                            </Image>
                                                        </Button>
                                                    </DataTemplate>
                                                </GridViewColumn.CellTemplate>
                                            </GridViewColumn>
                                        </GridView.Columns>
                                    </GridView>
                                </ListView.View>
                            </ListView>
                        </TabItem>
                    </TabControl>
                </GroupBox>
                <Button Command="{Binding SalonViewModel.Hakkında}" IsTabStop="False">
                    <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                        <Image Width="32" Height="32">
                            <Image.Source>
                                <MultiBinding Converter="{StaticResource SystemFileIconConverter}">
                                    <Binding Source="Shell32.dll" />
                                    <Binding Source="135" />
                                </MultiBinding>
                            </Image.Source>
                        </Image>
                        <TextBlock Text="UYGULAMA HAKKINDA" VerticalAlignment="Center" />
                    </StackPanel>
                </Button>
                <Button Command="{Binding SalonViewModel.VeritabanıAç}" IsTabStop="False">
                    <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                        <Image Width="32" Height="32">
                            <Image.Source>
                                <MultiBinding Converter="{StaticResource SystemFileIconConverter}">
                                    <Binding Source="Shell32.dll" />
                                    <Binding Source="72" />
                                </MultiBinding>
                            </Image.Source>
                        </Image>
                        <TextBlock Text="VERİTABANINI AÇ" VerticalAlignment="Center" />
                    </StackPanel>
                </Button>
            </StackPanel>
        </ScrollViewer>
        <GridSplitter Grid.Column="1" Width="3" HorizontalAlignment="Stretch" />
        <GroupBox Grid.Column="2">
            <GroupBox.Header>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="SALONLAR" VerticalAlignment="Center" />
                    <TextBox x:Name="Tb" Width="100" />
                    <Extensions:SplitButton Content="KİŞİ ARA" Command="{Binding SalonViewModel.SalonKişiAra, Mode=OneWay}" CommandParameter="{Binding Text, ElementName=Tb}">
                        <Extensions:SplitButton.InternalContent>
                            <ListBox Width="200" Height="200" ItemsSource="{Binding SalonViewModel.BulunanKişiler}" />
                        </Extensions:SplitButton.InternalContent>
                    </Extensions:SplitButton>
                    <Extensions:SplitButton Command="{Binding DataContext.ReportViewModel.SalonFilmTutarRaporla, ElementName=grid}">
                        <Extensions:SplitButton.InternalContent>
                            <GroupBox Header="FİLM DURUMLARI" Width="640" Height="480">
                                <Extensions:GraphControl Series="{Binding ReportViewModel.GraphData}" />
                            </GroupBox>
                        </Extensions:SplitButton.InternalContent>
                        <Image Width="16" Height="16" Source="{Binding Converter={StaticResource FilePathToIconConverter}, Source=.xlsx}" />
                    </Extensions:SplitButton>
                </StackPanel>
            </GroupBox.Header>
            <TabControl x:Name="TabCtrl" ItemsSource="{Binding SalonViewModel.Salonlar.Salon}" SelectedItem="{Binding SalonViewModel.Salon.SeçiliSalon}">
                <TabControl.Resources>
                    <Style TargetType="{x:Type TabItem}">
                        <Setter Property="Background" Value="{Binding Renk, Converter={StaticResource StringToBrushConverter}}" />
                    </Style>
                </TabControl.Resources>
                <TabControl.Background>
                    <StaticResource ResourceKey="BorderBackground" />
                </TabControl.Background>
                <TabControl.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <TextBlock Text="{Binding Adı}" VerticalAlignment="Center" FontWeight="Bold" />
                            <Button Grid.Column="1"
                                Background="Transparent" BorderBrush="Transparent"
                                Command="{Binding DataContext.ReportViewModel.SalonDurumuRaporla, ElementName=grid}"
                                CommandParameter="{Binding Mode=OneWay}"
                                IsTabStop="False">
                                <Image Width="16" Height="16" Source="{Binding Converter={StaticResource FilePathToIconConverter}, Source=.xlsx}" />
                            </Button>
                            <TextBlock Grid.Row="0" Grid.Column="2" VerticalAlignment="Center"><Run Text="{Binding EnKoltukSayı}" /><Run Text=" " /><Run Text="X" /><Run Text=" " /><Run Text="{Binding BoyKoltukSayı}" /></TextBlock>
                            <Extensions:NumericUpDownControl Grid.Row="1"
                                Maximum="2500" Minimum="0" Orientation="Vertical" SmallChange="1"
                                ToolTip="İlave Koltuk Ekleyin Ve Dizilimini Seçin."
                                Value="{Binding İlaveKoltukSayısı, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                            <ComboBox Grid.Row="1" Grid.Column="1"
                                ItemsSource="{Binding SalonEnBoyYapısı}"
                                SelectedItem="{Binding SeçiliSalonKoltukGrubu, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Converter={StaticResource SalonGroupingConverter}, Mode=OneWay}" />
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                                <ComboBox.ItemContainerStyle>
                                    <Style TargetType="{x:Type ComboBoxItem}">
                                        <Setter Property="HorizontalContentAlignment" Value="Left" />
